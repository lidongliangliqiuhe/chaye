/* pages/classification/classification.wxss */
.sousuo{
  display: flex;
}
.sousuoimg{
  width:10%;
  height: 50rpx;
  margin-top:10rpx;
}
.sousuoinp{
  display: block;
  width:70%;
  margin-top: 8rpx;
  border: 1px solid #ccc
}
.sousuobtn{
  width: 18%;
  height: 60rpx;
  padding:0px;
  margin:0px;
  margin-top:5rpx;
  font-size: 14px;
  border-radius: 5px;
}
.sousuobtn:active{
  width: 20%;
  padding:0px;
  font-size: 14px;
  border-radius: 8px;
  background:#ccc;
}
.left-navbar{
  position:absolute;
  left:0;
  width:25%;
  height:90%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:red;
  font-size:17px;
}
#right{
  position:absolute;
  right:0;
  width:75%;
  height:100%;
  display:flex;
  flex-wrap:wrap;
}
.goods-list{
  width: 47%;
  display: inline-block;
  margin: 3px;
  position: relative
}
.img{
  width: 100%;
  height: 137px;
}
.img1{
  position: absolute;
  bottom: 20px;
  right: 0px;
   width:50rpx;
  height: 50rpx;
}
.goods-list text{
  display: inline-block;
  font-size: 16px;
  width:90px;
  height: 42px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


