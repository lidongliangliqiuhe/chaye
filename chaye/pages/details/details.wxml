<!--pages/details/details.wxml-->
<import src="../cart/jiajian/jiajian_template.wxml"/>
<view>
  <image class='productimg' lazy-load mode="aspectFit" src="http://192.168.43.93:3000/img/product_img/biluochun1.jpg"></image>
  <text>￥</text>
  <text class='price'>100</text>
  <view>
    <text class='title'>biluochun</text>
  </view>
  <view>
    <text>运费：包邮</text>
    <text>库存</text>
    <text>100</text>
    <text>销量</text>
    <text>10</text>
  </view>
  <view>
    <view>请选择购买的数量</view>
    <template is="jiajian" data="{{ ...item,index,minusStatus}}" />
  </view>
  <!-- 分割区 -->
  <view class='divider'></view>
  <view class='foot'>
    <view class="add-buy sub f16">
      <button class="add-buy-btn" bindtap='buy'>立即购买</button>
    </view>
    <view class="add-cart sub f16">
      <button class="add-cart-btn" bindtap='cart'>加入购物车</button>
    </view>
  </view>
</view>
