/* pages/shoplist/shoplist.wxss */
/* 分割线 */
.divider{
  height:10rpx;
  background: #f1f1f1;
}
/* 按需排序按钮 */
.order{
  width:100%;
  display:flex;
  justify-content: space-around;
}
.order text{
  text-align: center;
  width: 50%;
  font-size: 16px;
}
.order text:first-child{
  border-right: 1px solid #ccc;
}
/* 商品列表 */
.shoplist{
  width:100%;
}
.shoplist-item{
  width:100%;
  height: 270rpx;
}
.shoplist-item .slimg{
  width:40%;
  height: 200rpx;
}
.shoplist-item .slmsg{
  font-size: 16px;
  float: right;
  width:60%;
  height: 100rpx;
  margin-top:70rpx;
}
.slprice{
  float: left;
  color:red;
  margin-left:20px;
}
.slcount{
  font-size: 12px;
  float: left;
  color:#ccc;
  margin-left:160px;
}
image.slcart{
  width:50rpx;
  height: 50rpx;
  float: right;
  margin-right:20rpx;
}
.shop-star{
  position: relative;
  right: -20rpx;
  top:20rpx;
}
.star-after{
  color:#e2e2e2;
}
.star-before{
  color:#f19e38;
  position: absolute;
  top:0;
  left:0;
  width:15%;
  overflow: hidden;
}